<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.calculation.CalculationFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/flag"></ImageView>

        <EditText
            android:id="@+id/edt_currency_change"
            style="@style/txt_medium"
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:textStyle="bold"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_currency_value"
            style="@style/txt_medium"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="EUR"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/flag"></ImageView>

        <TextView
            android:id="@+id/txt_currency_amount"
            style="@style/txt_medium"
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:textStyle="bold"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_currency_name"
            style="@style/txt_medium"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="EUR"
            />
    </LinearLayout>

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        android:textColor="@color/black"
        android:background="@color/teal_200"
        android:layout_gravity="center"
        />
</LinearLayout>